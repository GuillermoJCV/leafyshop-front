---
import Navbar from '../components/astro/navbar/Navbar.astro';
import Footer from '../components/astro/footer/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<!--
Voy a agregar los colores de tailwind al root de la pÃ¡gina para que si quiere pueda ir cambiando las variables
-->

<style is:global>
	:root {
		--main-50 	: #eefff4;
		--main-100 	: #d7ffe7;
		--main-200 	: #b2ffd0;
		--main-300 	: #76ffad;
		--main-400 	: #33f582;
		--main-500 	: #09de5f;
		--main-600 	: #01b84b;
		--main-700 	: #05903f;
		--main-800	: #0a7135;
		--main-900 	: #095028; /*Este es el color de --header-bg-color*/
		--main-950 	: #003417;

		--secondary-50 	: #f8f9fa;
	}

	:root {
		--bg-color: #f4f9f5;
		--header-bg-color: #095028;
		--st-neutral-color: #FFFFFF;
		--nd-neutral-color: #303030;
		--st-secondary-color: #d1f4e0;
		--nd-secondary-color: #35F33B;
		--border-color: #AAAAAA;
		--st-shadow-color: rgba(0, 0, 0, 0.2);
		--nd-shadow-color: rgba(0, 0, 0, 0.4);
		--rd-shadow-color: rgba(0, 0, 0, 0.5);

		
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	body {
		font-family: 'Poppins', sans-serif;
		background-color: var(--secondary-50);
		background-size: 224px;
	}
	h1, h2, h3, h4, h5, h6 {
	font-family: 'Montserrat', sans-serif;
	}
	.primary-btn {
		background-color: var(--main-900);
		color: var(--main-100);
		border-radius: 999999px;
		font-weight: bold;
	}
	.primary-btn:hover {
		top: 0;
    	filter: brightness(1.2);
	}
	.second-btn {
		background-color: var(--main-100);
		color: var(--main-900);
		border-radius: 999999px;
		font-weight: bold;
	}
	.second-btn:hover {
		top: 0;
    	filter: brightness(1.2);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
