---
import Layout from '../layouts/Layout.astro';
import Filter from '../components/react/product/filter/Filter.jsx';
import Card from '../components/react/product/cards/CardComponent.jsx';
---

<Layout title="Inicio">
	<div class="flex flex-col md:flex-row">
		<aside class="w-full md:w-1/3 p-5 bg-gray-50 bg-white m-4">
		<Filter client:only="react" />
		</aside>

		<main class="w-full md:w-2/3 p-5 bg-gray-50 bg-white m-4">
			<Card client:only="react" />
		</main>
	</div>
</Layout>
